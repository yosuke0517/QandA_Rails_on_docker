<% if users.any? %>
  <ul>
    <% users.each do |user| %>
      <li>
        <div class="media">
          <img class="mr-3" src="<%= gravatar_url(user, {size: 50 }) %>%" alt="" >
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
